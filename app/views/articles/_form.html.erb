<%= simple_form_for article do |f| %>
    <%= f.input :title %>
    <%= f.input :body, input_html: { rows: 10 }%>
    <%= f.association :category, collection: @categories, prompt: "Escolha uma categoria" %>

    <br>

    <p>
        <%= f.button :submit, class: 'btn btn-outline-success' %>
        <%= link_to 'Voltar', root_path, class: 'btn btn-outline-secondary' %>
    </p>
    
<% end %>